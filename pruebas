from tkinter import *

from BoardCoordinates import boardCoordinatesList

# label = an area widget that holds text and/or an image within a window

window = Tk()
window.geometry("550x800")
window.configure(background="#31363F")

frame = Frame(window, width=100, height=100, bg="red")
frame.place(x=0,y=0)

photo = None

def create():
    global photo
    photo = PhotoImage(file='img\\pieces\\bishop-black.png')
    
    for row in range(0, 8):
        for column in range(0, 8):
            boardCoordinatesList[row][column] = Label(frame, image=photo, bg="#76ABAE")
            boardCoordinatesList[row][column].grid(row=row,column=column)

create()

boardCoordinatesList[0][0].config(bg="black")

window.mainloop()